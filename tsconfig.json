{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "declaration": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "./dist",
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "target": "es6",
    "types": ["cypress", "jest", "node"],
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/*",
    "test/*",
    "./src/typeorm/entities/*",
    "./src/modules/**/dtos/*",
    "./src/shared/*",
    "./src/shared/dtos/*",
    "./src/shared/baseModules/*",
    "./src/shared/tests/*",
    "./src/modules/**/dtos/*",
    "./src/modules/**/tests/*"],
  "paths": {
    "src/*": ["src/*"],
    "decorators/*": ["src/decorators/*"],
    "dtos/*": ["src/modules/**/dtos/*"],
    "entities/*": ["src/typeorm/entities/*"],
    "enums/*": ["src/enums/*"],
    "exceptions/*": ["src/exceptions/*"],
    "models/*": ["src/models/*"],
    "modules/**/*": ["./src/modules/**/*"],
    "modules/auth/*": ["./src/modules/auth/*"],
    "scripts/*": ["./src/scripts/*"],
    "shared/*": ["./src/shared/*"],
  },
  "exclude": ["dist", "node_modules"]
}
